# ==============================================================================
# Social Manager MVP - Environment Variables
# ==============================================================================
# Copia questo file in .env e configura i valori

# ------------------------------------------------------------------------------
# MongoDB Configuration (Issue #11, #18, #19)
# ------------------------------------------------------------------------------
# URI connessione MongoDB
# Locale: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.mongodb.net
MONGO_URI=mongodb://localhost:27017

# Nome database
MONGO_DB_NAME=social_manager_db


# ------------------------------------------------------------------------------
# Gemini AI Configuration (Issue #15, #12, #10)
# ------------------------------------------------------------------------------
# API Key da Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Modello Gemini da usare
GEMINI_MODEL_NAME=gemini-pro

# Modello Vision per immagini (Issue #16 - future)
GEMINI_VISION_MODEL=gemini-pro-vision


# ------------------------------------------------------------------------------
# OpenAI Configuration (Opzionale - se usi OpenAI invece di Gemini)
# ------------------------------------------------------------------------------
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4


# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
# Ambiente: development, production
ENVIRONMENT=development

# Debug mode
DEBUG=True


# ------------------------------------------------------------------------------
# Social Network API Keys (Future - per pubblicazione automatica)
# ------------------------------------------------------------------------------
# LinkedIn
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Twitter
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret

# Instagram (via Facebook Graph API)
# INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Facebook
# FACEBOOK_APP_ID=your_facebook_app_id
# FACEBOOK_APP_SECRET=your_facebook_app_secret
